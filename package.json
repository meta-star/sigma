{
  "name": "sara.recv",
  "version": "1.0.0",
  "description": "Node.js on Docker",
  "author": "Taiwan Web Technology Promotion Organization",
  "license": "MIT",
  "main": "app.js",
  "scripts": {
    "new-secret": "node new_secret.js",
    "dev-database-ui": "docker run -p 8081:8081 --rm --link recv-db:recv-db -e ME_CONFIG_MONGODB_SERVER=recv-db mongo-express",
    "dev-database": "docker run -p 27017:27017 --rm --name=recv-db mongo",
    "dev": "nodemon app.js",
    "start": "node app.js",
    "lint": "eslint \"app.js\" \"new_secret.js\" \"src/**/*.js\"",
    "lint:fix": "eslint \"app.js\" \"new_secret.js\" \"src/**/*.js\" --fix",
    "test": "mocha test --exit --recursive --timeout 5000",
    "cover": "nyc mocha test --recursive --timeout 5000 --exit",
    "prepare": "husky install"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-validator": "^6.14.3",
    "http-status-codes": "^2.2.0",
    "js-sha256": "^0.9.0",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^6.8.4",
    "node-cache": "^5.1.2",
    "nodemailer": "^6.7.3",
    "request-ip": "^3.3.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "eslint": "^8.17.0",
    "eslint-config-google": "^0.14.0",
    "husky": "^8.0.1",
    "mocha": "^10.0.0",
    "mocha-steps": "^1.3.0",
    "nodemon": "^2.0.13",
    "nyc": "^15.1.0",
    "supertest": "^6.2.3"
  }
}
